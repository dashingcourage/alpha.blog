<%= render 'shared/errors', obj: @user %>
<div class="container form-height">
  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}, wrapper: :horizontal_form) do |f| %>
  <div class="form-group row">
    <div class="control-label col-sm-2">
      <%= f.label :username %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
    </div>
  </div>
  <div class="form-group row">
    <div class="control-label col-sm-2">
      <%= f.label :email %>
    </div>
    <div class="col-sm-8">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="control-label col-sm-2">
      <%= f.label :password %>
    </div>
    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
    </div>
  </div>
  <div class="form-group">
    <div class="offset-sm-2">
      <%= f.submit(@user.new_record? ? "Sign up" : "Update your account", class: 'btn btn-primary' )%>
    </div>
  </div>
  <% end %>
  <div align="center">
    [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
  </div>
</div>