<div class="ontainer-fluid">
  <% if @article.errors.any? %>
  <h2>The following errors prevented the article from getting created</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>

  <div class="row">
    <div class="col-md-10 col-md-offset-10">
      <%= form_for @article do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>

        <%= f.label :description %><br/>
        <%= f.text_area :description, class: "form-control", placeholder: "Content of article", autofocus: true %>

        <%= f.submit "Submit", class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <%= link_to "Back to articles listing", articles_path %>
</div>